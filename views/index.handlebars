<script>
  const categorias = ["Lanches", "Bebidas", "Sobremesas", "Combos", "Porções"];

document.addEventListener('DOMContentLoaded', function () {
  const categorias = ["Lanches", "Bebidas", "Sobremesas", "Combos", "Porções"];
  const selectCategoria = document.getElementById('categoria');
  const produtosContainer = document.querySelector('.produtos-container');

  // Populate the category select dropdown
  categorias.forEach(categoria => {
    const option = document.createElement('option');
    option.value = categoria;
    option.textContent = categoria;
    selectCategoria.appendChild(option);
  });

  // Fetch all products initially
  fetch('/produtos')
    .then(response => response.json())
    .then(produtos => {
      produtosContainer.innerHTML = '';
      produtos.forEach(produto => {
        const produtoElement = criarElementoProduto(produto);
        produtosContainer.appendChild(produtoElement);
      });
    })
    .catch(error => console.error('Erro ao buscar produtos:', error));

  // Add change event listener to category select
  selectCategoria.addEventListener('change', function () {
    const categoriaSelecionada = this.value;

    if (categoriaSelecionada) {
      fetch(`/produtos/${categoriaSelecionada}`)
        .then(response => response.json())
        .then(produtos => {
          produtosContainer.innerHTML = '';
          produtos.forEach(produto => {
            const produtoElement = criarElementoProduto(produto);
            produtosContainer.appendChild(produtoElement);
          });
        })
        .catch(error => console.error('Erro ao buscar produtos:', error));
    } else {
      // Fetch all products when "Todas as categorias" is selected
      fetch('/produtos')
        .then(response => response.json())
        .then(produtos => {
          produtosContainer.innerHTML = '';
          produtos.forEach(produto => {
            const produtoElement = criarElementoProduto(produto);
            produtosContainer.appendChild(produtoElement);
          });
        })
        .catch(error => console.error('Erro ao buscar produtos:', error));
    }
  });

  function criarElementoProduto(produto) {
    const produtoElement = document.createElement('div');
    produtoElement.classList.add('border', 'border-gray-200', 'w-full', 'h-fit', 'flex', 'flex-col', 'gap-3', 'p-5', 'bg-white', 'rounded-lg');

    const imagemProduto = document.createElement('img');
    imagemProduto.classList.add('rounded-xl', 'produto-imagem');
    imagemProduto.src = `images/${produto.imagem}`;
    imagemProduto.alt = produto.nome;

    const nomeProduto = document.createElement('h2');
    nomeProduto.classList.add('font-bold', 'text-xl');
    nomeProduto.textContent = produto.nome;

    const descricaoProduto = document.createElement('p');
    descricaoProduto.classList.add('text-gray-600', 'text-sm');
    descricaoProduto.textContent = produto.descricao;

    const precoProduto = document.createElement('span');
    precoProduto.classList.add('text-xl', 'font-bold', 'text-teal-500');
    precoProduto.textContent = `R$ ${produto.valor},00`;

    const botaoAdicionar = document.createElement('button');
    botaoAdicionar.classList.add('bg-orange-500', 'text-sm', 'text-white', 'px-6', 'py-2', 'rounded-full', 'font-bold', 'uppercase', 'add-to-cart');
    botaoAdicionar.setAttribute('data-produtoid', produto.ProdutoId);
    botaoAdicionar.textContent = 'adicionar';

    produtoElement.appendChild(imagemProduto);
    produtoElement.appendChild(nomeProduto);
    produtoElement.appendChild(descricaoProduto);
    produtoElement.appendChild(precoProduto);
    produtoElement.appendChild(botaoAdicionar);

    return produtoElement;
  }
});
</script>
