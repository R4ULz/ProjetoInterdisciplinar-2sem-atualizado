<script>
  document.querySelectorAll('.add-to-cart').forEach(button => {
    button.addEventListener('click', function () {
      const produtoId = this.getAttribute('data-produtoid');
      const quantidade = 1; // Ajuste conforme necessário

      fetch(`/carrinho/adicionar/${produtoId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: JSON.stringify({ quantidade: quantidade })
      })
        .then(response => response.json())
        .then(data => {
          if (data.message === "Produto obtido com sucesso") {
            updateLocalStorageCart(data.produtoId, data.quantidade, data.nome, data.precoUnitario);
            alert('Produto adicionado ao carrinho!');
          } else {
            alert(data.message);
          }
        })
        .catch(error => {
          console.error('Erro:', error);
          alert('Falha ao adicionar o produto ao carrinho.');
        });
    });
  });

  function updateLocalStorageCart(produtoId, quantidade) {
    let carrinho = JSON.parse(localStorage.getItem('carrinho')) || {};
    if (carrinho[produtoId]) {
      carrinho[produtoId].quantidade += quantidade;
    } else {
      carrinho[produtoId] = { quantidade: quantidade };
    }

    localStorage.setItem('carrinho', JSON.stringify(carrinho));
    console.log('Carrinho atualizado no localStorage:', carrinho);
  }
</script>