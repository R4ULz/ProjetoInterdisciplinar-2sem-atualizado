<div
  class="w-full h-fit text-black px-3 py-5 flex justify-center items-center md:mt-12"
>
  <div class="max-w-screen-2xl w-full h-fit flex flex-col gap-5">
          <ul class="flex flex-col gap-4 pl-5 font-semibold col-span-1 text-lg">
<a href="/painelGerente" class="hover:text-red-500 ease-in-out duration-300">
          <li><button id="verificarRole">Voltar ao Painel </button></li>
        </a>
        <a href="/logout" class="hover:text-red-500 ease-in-out duration-300 w-fit">
          <li><button class="border border-red-500 rounded-full px-6 py-1 text-red-500 font-semibold">Sair</button></li>
        </a>
      </ul>
    <div
      class="w-full h-full bg-white border border-gray-50 shadow-md rounded-md flex flex-col p-3 "
    >
      <div
        class="grid grid-cols-2 md:grid-cols-5 w-full p-1 border mb-3 border-red-500 h-full flex items-center justify-center font-semibold text-sm md:text-lg rounded-lg"
      >
        <div class="flex justify-center border-r">
          <h2>Nome</h2>
        </div>
        <div class="md:flex justify-center hidden border-r">
          <p>Preço</p>
        </div>
        <div class="md:flex justify-center hidden border-r">
          <p>Descrição</p>
        </div>
        <div class="md:flex justify-center hidden border-r">
          <p>Categoria</p>
        </div>
        <div class="flex justify-center border-r">
          <p>Ações</p>
        </div>

      </div>
      <div
        class="grid grid-cols-2 md:grid-cols-5 gap-3 w-full h-full p-1 items-center justify-center auto-rows-max text-sm md:text-lg"
      >
        {{#each Produto}}
          {{#dataValues}}
            <div
              class="auto-rows-max flex items-center justify-center"
            >{{nome}}</div>
            <div
              class="auto-rows-max hidden md:flex flex items-center justify-center"
            >R$ {{valor}},00</div>
            <div
              class="auto-rows-max hidden md:flex col-start-3 flex items-center justify-center"
            >{{descricao}}</div>
            <div
              class="auto-rows-max hidden md:flex col-start-4 flex items-center justify-center"
            >{{categoria}}</div>
            <div
              class="auto-rows-max col-start-5 flex gap-2 items-center justify-center text:sm"
            >
              <button type="button" class=" text-sm border border-red-500 rounded-lg px-3 py-1 text-red-500 font-semibold"><a
                  href="/editarProdutoGerente/{{ProdutoId}}"
                  style="color:inherit"
                >Editar</a></button>
              <button type="button" class="text-sm border bg-red-500 rounded-lg px-3 py-1 text-white font-semibold"><a
                  href="/excluirProdutoGerente/{{ProdutoId}}"
                  style="color:inherit"
                >Excluir</a></button>

            </div>
          {{/dataValues}}
        {{/each}}
      </div>
    </div>
  </div>
</div>