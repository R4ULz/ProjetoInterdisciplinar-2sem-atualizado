<div class="flex min-h-[640px] flex-col justify-center items-center px-3 py-12 max-w-screen-2xl w-full bg-gray-50">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-10 text-center text-3xl font-extrabold leading-9 text-gray-900 capitalize">Faça login em sua conta</h2>
  </div>

  {{#if successMessage}}
  <div class="mt-5 flex flex-col items-center text-center text-sm bg-green-500/20 border border-green-500 text-green-700 px-4 py-3 rounded-lg shadow-lg">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>
    <span>{{successMessage}}</span>
  </div>
  {{/if}}

  {{#if errorMessage}}
  <div class="mt-5 flex flex-col text-center text-sm bg-red-500/20 px-3 py-2 rounded-lg shadow-lg sm:mx-auto sm:w-full sm:max-w-md">
    <span>{{{errorMessage}}}</span>
  </div>
  {{/if}}

  <div class="mt-5 sm:mx-auto sm:w-full sm:max-w-md">
    <form class="space-y-6" action="/login" method="POST">
      <div>
        <label for="email" class="block text-lg font-semibold text-gray-900">Email</label>
        <div class="mt-1">
          <input id="email" name="email" type="email" value="{{#if email}}{{email}}{{/if}}" required
            class="block w-full rounded-md bg-white py-2 px-3 text-gray-900 shadow ring-1 ring-gray-300 placeholder:text-gray-400 focus:ring-red-500 focus:border-red-500">
        </div>
      </div>

      <div>
        <label for="password" class="block text-lg font-semibold text-gray-900">Senha</label>
        <div class="mt-1">
          <input id="password" name="password" type="password" required
            class="block w-full rounded-md bg-white py-2 px-3 text-gray-900 shadow ring-1 ring-gray-300 placeholder:text-gray-400 focus:ring-red-500 focus:border-red-500">
        </div>
      </div>

      {{#if message}}
      <div class="flex flex-col text-center text-sm bg-red-500/20 px-3 py-2 rounded-md">
        <span>{{message.[0]}}</span>
        <span>{{message.[1]}}</span>
      </div>
      {{/if}}

      <div>
        <button type="submit"
          class="flex w-full justify-center rounded-md bg-red-600 px-4 py-2 text-lg font-semibold text-white shadow hover:bg-red-700 transition-all ease-in-out duration-300">Entrar</button>
      </div>
    </form>
    <p class="mt-10 text-center text-sm text-black">
      Não tem conta?
      <a href="/signin" class="underline font-semibold text-red-600 hover:text-red-700">Criar conta agora!</a>
    </p>
  </div>
</div>
