
<main class="w-screen mt-20 flex flex-col items-center w-full h-full">
    <h1 class="text-2xl font-bold text-gray-800">Alterar Senha</h1>
    <div class="mt-4 p-8 bg-white rounded-lg shadow-md w-96">
        <form action="/alterar-senha" method="post" class="flex flex-col gap-6">
            <div class="flex flex-col">
                <label for="novaSenha" class="font-medium text-gray-600">Nova Senha:</label>
                <input type="password" id="novaSenha" name="novaSenha" required
                    class="mt-1 p-2 border rounded-md border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <div class="flex flex-col">
                <label for="confirmaSenha" class="font-medium text-gray-600">Confirme a Senha:</label>
                <input type="password" id="confirmaSenha" name="confirmaSenha" required
                    class="mt-1 p-2 border rounded-md border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <button type="submit"
                class="mt-4 bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-full shadow">
                Atualizar Senha
            </button>
        </form>
    </div>
</main>
