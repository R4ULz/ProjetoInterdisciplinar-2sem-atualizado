<head>
  <meta charset="UTF-8">
  <!-- Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <!-- Include jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Include jQuery Mask Plugin -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
</head>
<div class="flex h-fit flex-col justify-center items-center px-3 py-12 max-w-screen-2xl w-full">
        <div class="flex justify-start flex-col w-full">
          <ul class="flex flex-col gap-4 pl-5 font-semibold col-span-1 text-lg">
            <a href="/painelAdm" class="hover:text-red-500 ease-in-out duration-300">
              <li class=""><button id="verificarRole">Voltar ao Painel </button></li>
            </a>
          <a href="/logout" class="hover:text-red-500 ease-in-out duration-300 w-fit">
            <li><button class="border border-red-500 rounded-full px-6 py-1 text-red-500 font-semibold">Sair</button></li>
          </a>
                </ul>
        </div>
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 capitalize">Cadastro de <span class="tfont-bold text-red-500">gerentes</span>
    </h2>
  </div>

  <div class="mt-5 sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="space-y-3" action="/cadastrarG" method="POST">
 <div>
          <label for="name" class="block text-lg font-semibold text-gray-900">Nome Completo</label>
          <div class="mt-1">
            <input id="name" placeholder="Seu nome" name="name" type="text" autocomplete="name" required
              class="block w-full rounded-md bg-white py-2 px-3 text-gray-900 shadow ring-1 ring-gray-300 placeholder:text-gray-400 focus:ring-red-500 focus:border-red-500">
          </div>
        </div>

      <div>
        <label for="cpf" class="block font-medium leading-6 text-gray-900">CPF</label>
        <div class="mt-2">
          <input id="cpf" name="cpf" type="text" autocomplete="cpf" required
            class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6 px-2"
            value="{{#if cpf}}{{cpf}}{{/if}}">
        </div>

        <div>
          <label for="email" class="block text-lg font-semibold text-gray-900">Email</label>
          <div class="mt-1">
            <input id="email" placeholder="example@gmail.com" name="email" type="email" autocomplete="email" required
              class="block w-full rounded-md bg-white py-2 px-3 text-gray-900 shadow ring-1 ring-gray-300 placeholder:text-gray-400 focus:ring-red-500 focus:border-red-500">
          </div>
        </div>

        <div>
          <label for="password" class="block text-lg font-semibold text-gray-900">Senha</label>
          <div class="mt-1">
            <input type="password" name="senha" required placeholder="*********"
              class="block w-full rounded-md bg-white py-2 px-3 text-gray-900 shadow ring-1 ring-gray-300 placeholder:text-gray-400 focus:ring-red-500 focus:border-red-500">
          </div>
        </div>

      {{#if message}}
      <div class="flex flex-col text-center text-sm bg-red-500/20 px-3 py-2 rounded-md">
        <span>{{message}}</span>
      </div>
      {{/if}}

      <div>
        <button type="submit"
          class="flex w-full justify-center rounded-md bg-red-600 px-3 py-1.5 font-semibold leading-6 text-white shadow-sm hover:bg-red-600/90 transition-all ease-in-out duration-300">Cadastrar gerente</button>
      </div>
    </form>

  </div>
</div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      $('#cpf').mask('000.000.000-00', { reverse: true });
    });
  </script>