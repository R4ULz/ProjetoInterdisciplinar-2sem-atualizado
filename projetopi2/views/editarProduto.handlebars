<div
  class="w-full h-fit text-black px-3 py-5 flex justify-center items-center md:mt-12"
>
  <div class="max-w-screen-2xl w-full h-fit flex flex-col gap-5 items-center">
    <div
      class="w-full h-full bg-white border border-gray-50 shadow-md rounded-md flex flex-col p-3"
    >
     {{#each produto}}
                    {{#dataValues}}
      <div class="flex items-center gap-2 font-bold">
        <div class="bg-gradient-to-b from-orange-400 to-red-600 w-1 h-5"></div>
        <h2 class="text-2xl">Atualizando o produto: {{nome}}</h2>
      </div>
      <div class="w-full h-fit p-3 flex flex-col">
        
        <form
          action="/atualizar"
          method="POST"
          class="flex flex-col gap-5 font-semibold"
        >
          <input type="hidden" name="id" class="form-control" id="nome" value="{{id}}">
          <div class="flex flex-col gap-1 md:w-[38%]">
              <label for="name">Imagem:</label>
              <div
                class="flex items-center gap-2 border-b border-red-500 p-1 w-full font-normal"
              >
               <i class="fa-solid fa-image text-red-500"></i>
                <input
                  type="text"
                  name="imagem"
                  id="imagem"
                  value="{{imagem}}"
                  class="outline-none w-full"
                  required
                />
              </div>
            </div>
         {{!-- <div>
            <label class="form-label">Imagem do Produto:
              <div  class="pt-2" >
                <input
                  type="file"
                  name="imagem"
                  id="imagem"
                  class="outline-none bg-red" value="{{imagem}}"
                />
              </div>
            </label>
          </div> --}}

          <div class="flex flex-col md:flex-row gap-16 w-4/5 justify-between">
            <div class="flex flex-col gap-1 md:w-1/2">
              <label for="name">Nome:</label>
              <div
                class="flex items-center gap-2 border-b border-red-500 p-1 w-full font-normal"
              >
                <i class="fa-solid fa-utensils text-red-500"></i>
                <input
                  type="text"
                  name="nome"
                  id="nome"
                  class="outline-none w-full" 
                  value="{{nome}}"
                  required
                />
              </div>
            </div>

            <div class="flex flex-col gap-1 md:w-1/2">
              <label for="name">Valor:</label>
              <div
                class="flex items-center gap-2 border-b border-red-500 p-1 w-full font-normal"
              >
                <i class="fa-solid fa-dollar-sign text-red-500"></i>
                <input
                  type="number"
                  name="valor"
                  id="valor" 
                  class="outline-none w-full"
                  value="{{valor}}"
                />
              </div>
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <label class="form-label">Descrição:</label>
            <div class="w-4/5 font-normal">
              <textarea
                name="descricao"
                class="form-control outline-none border border-red-500 rounded-lg w-full p-3"
                id="descricao"
                style="height: 100px" 
              >{{descricao}}</textarea>
            </div>
          </div>
          <div class=" md:w-2/6 flex gap-4">
            <label class="form-label">Categoria:</label>
            <div class="text-red-500">
              <select
                name="categoria"
                class="form-select outline-none border border-red-500 rounded-lg w-full "
                aria-label="Default select example"
              >
                <option value="lanches" selected>Krusty Lanches</option>
                <option value="bebidas">Krusty Bebidas</option>
                <option value="fritos">Krusty Fritos</option>
                <option value="sobremesas">Krusty Sobremesas</option>
                <option value="combos">Krusty Combos</option>
              </select>
            </div>
          </div>

          <div
            class="self-start mt-6 border bg-red-500 rounded-lg px-6 py-2 text-white font-semibold"
          >
            <button type="submit">Atualizar</button>
          </div>
        </form>
          {{/dataValues}}
                {{/each}}
      </div>
    </div>
  </div>
</div>

